<!-- customize.wxml - 定制页面 -->
<view class="customize-container">
  <view class="product-preview">
    <image src="{{product.image}}" mode="aspectFit" class="preview-image"/>
    <view class="custom-content">
      <image wx:if="{{customImage}}" src="{{customImage}}" mode="aspectFit" class="custom-image"/>
      <text wx:if="{{customText}}" class="custom-text">{{customText}}</text>
    </view>
  </view>
  
  <view class="customize-options">
    <!-- 图片上传 -->
    <view class="upload-section">
      <button class="upload-btn" bindtap="chooseImage">上传图片</button>
      <view class="image-preview" wx:if="{{imageList.length > 0}}">
        <image src="{{imageList[0]}}" mode="aspectFit"/>
      </view>
    </view>
    
    <!-- 文字输入 -->
    <view class="text-section">
      <textarea 
        placeholder="请输入定制文字"
        value="{{customText}}"
        bindinput="inputText"
        maxlength="50"
        class="text-input"
      />
    </view>
    
    <!-- 提交按钮 -->
    <button class="submit-btn" bindtap="submitCustomization">提交定制</button>
  </view>
</view>
