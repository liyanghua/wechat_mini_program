
/* pages/customize/customize.wxss */
.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 120rpx; /* 为底部操作栏留出空间 */
}

/* 商品主图 */
.product-image-section {
  width: 100%;
  background: #fff;
}

.product-image {
  width: 100%;
  display: block;
}

/* 商品信息区域 */
.product-info-section {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.price-section {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.price {
  font-size: 48rpx;
  color: #ff4444;
  font-weight: bold;
}

.price-label {
  font-size: 24rpx;
  color: #ff4444;
  margin-left: 8rpx;
}

.sale-info {
  flex: 1;
  text-align: right;
}

.sale-count {
  font-size: 24rpx;
  color: #999;
}

.title-section {
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
  line-height: 1.4;
  font-weight: 500;
}

.shipping-section {
  background: #fafafa;
  border-radius: 8rpx;
  padding: 16rpx;
}

.shipping-item {
  display: flex;
  align-items: center;
}

.shipping-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 24rpx;
}

.shipping-value {
  font-size: 26rpx;
  color: #333;
}

/* 商品属性区域 */
.properties-section {
  background: #fff;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.properties-list {
  padding: 12rpx 24rpx;
}

.property-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.property-item:last-child {
  border-bottom: none;
}

.property-label {
  width: 160rpx;
  font-size: 26rpx;
  color: #666;
}

.property-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

/* 商品详情区域 */
.detail-section {
  background: #fff;
}

.detail-images {
  font-size: 0; /* 消除图片间的空隙 */
}

.detail-image {
  width: 100%;
  display: block;
}
.debug-info {
  background: #f8f8f8;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
}

.debug-text {
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.image-info {
  margin-top: 16rpx;
  padding: 12rpx;
  background: #fff;
  border-radius: 8rpx;
}

.info-title {
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.image-info text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.canvas-container {
  width: 100%;
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
}

canvas {
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  border-radius: 12rpx;
}

.upload-preview {
  margin: 20rpx 0;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.preview-title {
  font-size: 28rpx;
  font-weight: bold;
}

.reset-btn {
  font-size: 24rpx;
  color: #07c160;
  padding: 8rpx 16rpx;
}

.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
}

.upload-btn {
  background: #07c160;
  color: #fff;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border-radius: 44rpx;
  width: 100%;
}

.upload-btn.loading {
  background: #8dd4a8;
}

.upload-btn[disabled] {
  background: #8dd4a8;
  color: rgba(255,255,255,0.8);
}

