/* pages/customize/customize.wxss */
.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 24rpx;
}

.preview-container {
  position: relative;
  width: 100%;
  margin-bottom: 24rpx;
}

.hidden-canvas {
  position: fixed;
  left: -9999px;
  top: -9999px;
}

.preview-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.preview-image {
  width: 100%;
  height: 750rpx;
  border-radius: 8rpx;
}

.action-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.product-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.product-price {
  font-size: 36rpx;
  color: #ff4444;
  font-weight: bold;
}

.upload-section {
  margin-bottom: 32rpx;
}

.upload-btn {
  background: #07c160;
  color: #ffffff;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border-radius: 44rpx;
  margin-bottom: 16rpx;
}

.upload-btn.loading {
  background: #a8e6b9;
  color: #ffffff;
}

.upload-tip {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
}

.confirm-btn {
  background: #ff4444;
  color: #ffffff;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border-radius: 44rpx;
}