/* pages/customize/customize.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 120rpx; /* 为底部按钮留出空间 */
}

.debug-info {
  background: #f8f8f8;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
}

.debug-text {
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.image-info {
  margin-top: 16rpx;
  padding: 12rpx;
  background: #fff;
  border-radius: 8rpx;
}

.info-title {
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.image-info text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.canvas-container {
  width: 100%;
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
}

canvas {
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  border-radius: 12rpx;
}

.upload-preview {
  margin: 20rpx 0;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.preview-title {
  font-size: 28rpx;
  font-weight: bold;
}

.reset-btn {
  font-size: 24rpx;
  color: #07c160;
  padding: 8rpx 16rpx;
}

.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
}

.upload-btn {
  background: #07c160;
  color: #fff;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border-radius: 44rpx;
  width: 100%;
}

.upload-btn.loading {
  background: #8dd4a8;
}

.upload-btn[disabled] {
  background: #8dd4a8;
  color: rgba(255,255,255,0.8);
}

